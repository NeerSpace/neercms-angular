/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "paths": {
      "neercms": [
        "dist/neercms"
      ],
      "neercms/core/*": [
        "dist/neercms/core/*",
        "dist/neercms/core"
      ],
      "neercms/form/*": [
        "dist/neercms/form/*",
        "dist/neercms/form"
      ],
      "neercms/layout/*": [
        "dist/neercms/layout/*",
        "dist/neercms/layout"
      ],
      "neercms/services/*": [
        "dist/neercms/services/*",
        "dist/neercms/services"
      ],
      "neercms/shared/*": [
        "dist/neercms/shared/*",
        "dist/neercms/shared"
      ],
      "neercms/split/*": [
        "dist/neercms/split/*",
        "dist/neercms/split"
      ],
      "neercms/table/*": [
        "dist/neercms/table/*",
        "dist/neercms/table/core/*",
        "dist/neercms/table"
      ]
    },
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2020",
    "module": "es2020",
    "lib": [
      "es2020",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
